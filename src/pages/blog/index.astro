import Layout from "../../layouts/Layout.astro";

import '../../styles/main.css';

title: 'Azure Services'
author: 'impondesk'

// Import multiple files with Astro.glob
const posts = await Astro.glob('./*.md');
---

<Layout title="Blog">

<ul class="list-none">

  <!-- {posts.map(post => {
    console.log(post);
    return (<li><a href={post.url}>{post.frontmatter.title}</a></li>);
  })} -->



  {posts.map(post => {

    console.log(post);
    
    return <li key="slug" class="py-4">
    <article class="space-y-2 xl:grid xl:grid-cols-4 xl:items-baseline xl:space-y-0">
      <dl>
        <dt class="sr-only">Published on</dt>
        <dd class="text-base font-medium leading-6 text-gray-500 dark:text-gray-400">
          <time>{post.frontmatter.date}</time>
        </dd>
      </dl>
      <div class="space-y-3 xl:col-span-3">
        <div>
          <h2 class="text-2xl font-bold leading-8 tracking-tight">
            <a href={`/blog/${post.frontmatter.slug}`} class="text-gray-900 dark:text-gray-100">{post.frontmatter.title}</a>
          </h2>
          <div class="flex flex-wrap -mt-3">
            {post.frontmatter.tags.map((tag) => (
              // <a class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">{tag}</a>
              <a href="#" class="bg-blue-100 hover:bg-blue-200 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 dark:hover:bg-blue-300">{tag}</a>
            ))}
          </div>
        </div>
        <div class="prose max-w-none text-gray-500 dark:text-gray-400">
          {post.frontmatter.summary}
        </div>
        
        <div class="text-base font-medium leading-6"><a class="text-primary-500 hover:text-primary-600 dark:hover:text-primary-400" aria-label="Read &quot;New features in v1&quot;" href={`/blog/${post.frontmatter.slug}`}>Read more â†’</a></div>

      </div>
    </article>
  </li>}
  
  
  // 
  )}
</ul>
</Layout>